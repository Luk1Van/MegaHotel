@using MegaHotel.Models.MessageModels
@model Message

<head>
    <link rel="stylesheet" href="https://bootstrapmade.com/assets/css/demo.css?v=5.3">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="section-title">
            <h2 class="header-color">Our Contacts</h2>
        </div>
        <div class="row-content">
            <div class="col-lg-6">
                <ul>
                    <li>
                        <h4>Mail:</h4>
                        <p>ouremail@adres.com</p>
                    </li>
                    <li>
                        <h4>Contact phone:</h4>
                        <p>+381-***-**-**</p>
                    </li>
                    <li>
                        <h4>Location:</h4>
                        <p>Цара Душана 34, Београд 11080, Сербия</p>
                    </li>
                </ul>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2828.675620932205!2d20.40214571142689!3d44.84853897418556!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x475a65b17b627421%3A0x6d6130bffc362462!2sIT-Academija!5e0!3m2!1sru!2sru!4v1687234101943!5m2!1sru!2sru"
                        width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
            <div class="col-lg-6"><p>Use this form if you want to ask something, we will contact you on your email. Don't be shy;)</p></div>

            <form asp-action="Message" method="post" role="form">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Your Name" required>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="Your email" required>
                </div>
                <div class="form-group">
                    <label asp-for="MessageText"></label>
                    <textarea asp-for="MessageText" class="form-control" rows="5" placeholder="Message" required></textarea>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-5">
                        <input type="submit" class="btn btn-primary" value="Send Message" />
                    </div>
                </div>
            </form>

        </div>
    </div>
</body>