@model MegaHotel.ViewModels.RegisterModel

<h2>Registration</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Enter email</label><br />
            <input type="text" asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" />
        </div class="mb-3">
        <div>
            <label asp-for="Password" class="form-label">Enter Password</label><br />
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password" />
        </div>
        <div class="mb-3">
            <label asp-for="PasswordConfirmation" class="form-label">Repeat password</label><br />
            <input asp-for="PasswordConfirmation" class="form-control" />
            <span asp-validation-for="PasswordConfirmation"/>
        </div>
        <div class="mb-3">
            <input type="submit" value="Register" class="btn btn-primary"/>
        </div>
    </div>
</form>