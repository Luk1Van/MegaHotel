@model MegaHotel.ViewModels.RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Enter email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Enter Password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="PasswordConfirmation">Repeat password</label><br />
            <input asp-for="PasswordConfirmation"/>
            <span asp-validation-for="PasswordConfirmation"/>
        </div>
        <div>
            <input type="submit" value="Register" />
        </div>
    </div>
</form>