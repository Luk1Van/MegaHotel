@model MegaHotel.ViewModels.LoginModel

<h2>Welcome to our website!</h2>

<a asp-action="Register" asp-controller="Account">Registration</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Enter Email</label>
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" />
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label">Enter password</label>
            <input asp-for="Password" class="form-control"  />
            <span asp-validation-for="Password" />
        </div>
        <div class="mb-3">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>
</form>